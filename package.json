{
  "name": "mirabel-backend",
  "version": "0.1.0",
  "private": true,
  "description": "GraphQL + Prisma + PostgreSQL backend for Mirabel UI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "deploy": "node deploy.js",
    "deploy:prod": "node deploy.js --stage prod",
    "offline": "npm run build && serverless offline",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:introspect": "prisma db pull",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "health": "node -e \"console.log('OK')\"",
    "postinstall": "prisma generate"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@as-integrations/aws-lambda": "^3.0.0",
    "@prisma/client": "^5.16.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.143",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "esbuild": "^0.25.9",
    "esbuild-node-externals": "^1.18.0",
    "prisma": "^5.16.1",
    "serverless": "^3.40.0",
    "serverless-esbuild": "^1.55.1",
    "serverless-offline": "^13.3.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
